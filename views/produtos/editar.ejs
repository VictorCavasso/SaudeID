<%- include('../partials/header.ejs') %>

    <section id="about">
        <div class="starter-template">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <form method='post'>
                        <h2>Editar Produto</h2>
                        <div class="form-group">
                            <label for="description">Produto:</label>
                            <input value="<%= produto.description %>" name="description" type="text"
                                class="form-control" id="description" aria-describedby="nameHelp"
                                placeholder="Informe a descrição">
                            <small id="nameHelp" class="form-text text-muted">Descrição do produto a ser salvo.</small>
                            <% if(errors && errors.indexOf('description')>= 0) { %>
                                <small id="nameHelp" class="form-text text-muted">
                                    Por favor, informe a descrição do produto
                                </small>
                                <% } %>
                        </div>
                        <div class="form-group">
                            <label for="category">Categoria:</label>
                            <input value="<%= produto.category %>" name="category" type="text" class="form-control"
                                id="category" aria-describedby="nameHelp" placeholder="Informe a categoria">
                            <small id="nameHelp" class="form-text text-muted">Categoria do produto a ser salvo.</small>
                            <% if(errors && errors.indexOf('category')>= 0) { %>
                                <small id="nameHelp" class="form-text text-muted">
                                    Por favor, informe a categoria do produto
                                </small>
                                <% } %>
                        </div>
                        <div class="form-group">
                            <label for="items">Itens em estoque:</label>
                            <input value="<%= produto.items %>" name="items" type="text" class="form-control" id="items"
                                aria-describedby="nameHelp" placeholder="Informe o número de itens em estoque">
                            <small id="nameHelp" class="form-text text-muted">Numero de itens em estoque do produto a
                                ser salvo.</small>
                            <% if(errors && errors.indexOf('items')>= 0) { %>
                                <small id="nameHelp" class="form-text text-muted">
                                    Por favor, informe o numero de itens do produto
                                </small>
                                <% } %>
                        </div>
                        <button class='btn btn-primary'>Salvar</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <%- include('../partials/footer') %>